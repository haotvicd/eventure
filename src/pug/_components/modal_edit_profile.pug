                      .m-input
                        span.m-input_label Last Name
                          small.warning *
                        .input-area
                          input.input.input-text(type="text" value='Pena')

                  .m-activity_content-row
                    .m-input
                      span.m-input_label Email
                        small.warning *
                      .input-area.edit-email
