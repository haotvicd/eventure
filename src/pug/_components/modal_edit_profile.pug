                  .m-activity_content-row
                    .m-input
                      span.m-input_label Job title
                        small.warning *
                      .input-area
                        input.input.input-text(type="text" value='Business Head')

                  .m-activity_content-row
                    .m-input
                      span.m-input_label Organization
                        small.warning *
                      .input-area
                        input.input.input-text(type="text" value='Fractal Company')

                  .m-activity_content-row
                    .m-input
                      span.m-input_label City
                        small.warning *
                      .input-area
                        input.input.input-text(type="text" value='Auckland')

                  .m-activity_content-row
                    .m-input
                      span.m-input_label Country
                        small.warning *
                      .input-area
                        input.input.input-text(type="text" value='New Zealand')

                .m-activity_content-colum
                  .m-activity_content-title.edge Additional Information

                  .m-activity_content-row
                    .m-input
                      .m-editor
                        span.m-input_label About me
                        .m-editor_area
