include ../_mixins/_all

block vars
  -title        = ''
  -description  = ''
  -keywords     = ''
  -og_title     = ''
  -url          = ''
  -pageID       = ''
  -path         = '.'
  -hasFooter    = true

doctype html
html
  head
    meta(charset='UTF-8')
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, width=device-width">
    meta(name='charset' content='utf-8')
    meta(name='format-detection' content='telephone=no')
    meta(property='og:title' content=og_title)
    meta(property='og:type' content='website')
    meta(property='og:url' content=url)
    meta(property='og:image' content=path+'')
    meta(name='twitter:card' content='summary')
    meta(name='description' content=description)
    meta(name='keywords' content=keywords)
    title=title
    link(rel='icon' href=path+'assets/images/favicon.ico')
    link(rel='preconnect' href='//fonts.googleapis.com')
    link(rel='preconnect' href='//fonts.gstatic.com' crossorigin='')
    link(href='//fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap' rel='stylesheet')
    link(href='//cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(href='//unpkg.com/swiper/swiper-bundle.min.css' rel='stylesheet')
    if jsID == 'calendar'
      link(rel='stylesheet' href=path+"/assets/css/libs/bootstrap-datetimepicker.min.css")
      link(rel="stylesheet", href="//cdn.quilljs.com/1.3.6/quill.snow.css")
    if videoJs == 'true'
      link(rel='stylesheet' type='text/css' href='//cdn.jsdelivr.net/npm/mediaelement@4.2.16/build/mediaelementplayer.min.css')
    link(rel='stylesheet' href=path+'/assets/css/style.css')
    link(rel='stylesheet' href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css")

  body(class=pageID)
    div(class=pageID)
      include ../_modules/header
      main.main(class=pageChild)
        block container
      if hasFooter || pageID == 'dashboard' || pageID == 'sign-up' || pageID == 'sign-in' || pageID == 'landing' || pageID == 'profile'
        include ../_modules/footer

    script(src='//code.jquery.com/jquery-3.6.0.min.js')
    script(src='//cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
    script(src='//cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js')
    script(src='//unpkg.com/swiper/swiper-bundle.min.js')
    script(src='https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js')

    if jsID == 'calendar'
      script(src=path+"/assets/js/libs/moment-with-locales.js")
      script(src=path+"/assets/js/libs/bootstrap-datetimepicker.min.js")
      script(src="//cdn.quilljs.com/1.3.6/quill.min.js")
    if uploadJs == 'true'
      script(src=path+"/assets/js/libs/jquery.ezdz.js")
    if videoJs == 'true'
      script(src='//cdn.jsdelivr.net/npm/mediaelement@4.2.16/build/mediaelement-and-player.min.js')
    script(src=path+"/assets/js/common.js")
    block scripts