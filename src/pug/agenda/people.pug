                        li 
                          .chat-item 
                            .chat-item-header
                              .panel-top-info Michael Smith
                                img.btn-user-info(src=path+"/assets/images/img_avatar03.png", alt="")
                                span 
                                  span.ico-mic-circe
                                .panel-top-info-time 
                                   .info Job title, Organization
                                   .time 3 mins ago 
                            .chat-item-content We‚Äôll just use this to follow up if needed. No spam, promise.
                              .chat-item-action 
                                .chat-like 
                                  span.ico-like
                                .chat-action-group 
                                  ul 
                                    li 
                                      .chat-action-item.chat-action-undo 
                                        span.ico-undo 
                                    li 
                                      .chat-action-item.chat-action-show 
                                        span.ico-laptop
                                    li 
                                      .chat-action-item.chat-action-menu 
                                        span.ico-menu 
                                      include components/menu-chat
                    .chat-tool 
                      .chat-tool-main 
                        .chat-tool-icon 
                        input.chat-tool-input(placeholder="What would you like to share?")
                        button.btn.btn-primary.trans.chat-tool-submit(type="button") Send
                #tab-qa.tab-content 
                  include components/tab-qa
                #tab-poll.tab-content 
                  include components/tab-poll
                #tab-raised-hands.tab-content
                  include components/tab-raised-hands
                #tab-videos.tab-content 
                  include components/tab-video
          #tab-main2.tab-content 
            include components/tab-main2
  include ../_components/widget
  include components/modal-play
  include components/modal-end
  include components/popup-user
  