extends ../_layout/default

block vars
  -title        = 'Agenda'
  -description  = ''
  -keywords     = ''
  -og_title     = ''
  -url          = ''
  -pageID       = 'agenda'
  -jsID         = 'calendar'
  -uploadJs     = 'true'
  -videoJs      = 'true'
  -path         = '../'
  -hasFooter    = false

block container
  .layout-agenda
    .layout-main 
      .main-header 
        include components/header-live
      .main-video 
        .box-live
          .box-live-main-list
            .box-live-main
              img(src=path+"/assets/images/agenda/live-user1.jpg", alt="")
              .box-live-info
                .live-info-ticket.ticket-hot
                  img(src=path+"/assets/images/ico_host.svg", alt="")
                  label Host
                .live-info-caption Michael Smith
                .live-info-descriptions Bussiness Conference Design & Facilitation, The Art of Metting
        .video-control 
          include components/video-control-record
    .layout-sidebar 
      .tab-main.tag-js
        .tab-header
          a(attr-body="#tab-main1") Live feeds
          a.is-activated(attr-body="#tab-main2") People in session
        .tab-body 
          #tab-main1.tab-content
            .tab-item.tag-js
              .tab-header
                a(attr-body="#tab-chats") Chats
                a(attr-body="#tab-qa") Q&A
                a(attr-body="#tab-poll") Poll
                a(attr-body="#tab-raised-hands") Raised Hands
                a(attr-body="#tab-videos") Videos
              .tab-body
                #tab-chats.tab-content 
                  .tab-item-main 
                    .chat-main
                      ul.chat-list 
                        li.chat-pin 
                          .chat-item
                            .chat-item-header
                              .panel-top-info Michael Smith
                                img.btn-user-info(src=path+"/assets/images/img_avatar04.png", alt="")
                                .chat-pin-ico 
                                  span.ico-pin
                                  |Pinned
