extends ../_layout/default

block vars
  -title        = 'Agenda'
  -description  = ''
  -keywords     = ''
  -og_title     = ''
  -url          = ''
  -pageID       = 'agenda'
  -jsID         = 'calendar'
  -uploadJs     = 'true'
  -videoJs      = 'true'
  -path         = '../'
  -hasFooter    = false

block container
  .layout-agenda
    .layout-main 
      .main-header 
        include components/header-live
      .main-video 
        .box-live
          .box-live-main-list
            .box-live-main
              img(src=path+"/assets/images/agenda/live-user1.jpg", alt="")
              .box-live-info
                .live-info-ticket.ticket-hot
                  img(src=path+"/assets/images/ico_host.svg", alt="")
                  label Host
                .live-info-caption Michael Smith
                .live-info-descriptions Bussiness Conference Design & Facilitation, The Art of Metting
        .video-control 
          include components/video-control-record
    .layout-sidebar 
      .tab-main.tag-js
        .tab-header
          include components/tab-header
        .tab-body 
          #tab-main1.tab-content
            .tab-item.tag-js
              .tab-header
                a(attr-body="#tab-chats") Chats
                a.is-activated(attr-body="#tab-qa") Q&A
                a(attr-body="#tab-poll") Poll
                a(attr-body="#tab-raised-hands") Raised Hands
                a(attr-body="#tab-videos") Videos
              .tab-body
                #tab-chats.tab-content 
                  include components/tab-chat
                #tab-qa.tab-content 
                  .tab-item-main 
                    form.form
                      .form-item-inline 
                        .form-item 
                            .form-item-label View
                            .form-item-input.input-select
                              input(type="text" name="select_name1")
                              .label All
                              ul 
                                li(data-value="0").is-activated All 
                                li(data-value="1") Option 1
                                li(data-value="2") Option 2
                        .form-item 
                            .form-item-label Sort by
                            .form-item-input.input-select
                              input(type="text" name="select_name2")
                              .label Latest
                              ul 
                                li(data-value="0").is-activated Latest 
                                li(data-value="1") Option 1
                                li(data-value="2") Option 2
                    .tab-box-group.tab-box-group-qa
                      .panel-style1
                        .panel-top.panel-top-style1 
                          .panel-top-status Published
                          .panel-top-info Michael Smith
                            img(src=path+"/assets/images/img_avatar01.png", alt="")
                            .panel-top-info-time 3 mins ago
                          .panel-btn-menu.btn-qa-menu Menu 
                          include components/menu-qa
                        .panel-body 
                          .panel-main-desc.panel-main-desc-style1 What describes you best? Can you only change your name twice within 14 days?
                            .panel-main-desc-vote
                              .panel-main-desc-vote-ico
                                span.ico-arrow-light-up
                              .panel-main-desc-vote-val 154
                          form.form
                            .form-footer 
                              button.btn.btn-primary.trans(type="button")
                                span.ico-comment
                                |Comment
                      .panel-style1
                        .panel-top.panel-top-style1 
                          .panel-top-status.status-warning Unanswered
                          .panel-top-info Michael Smith
                            img(src=path+"/assets/images/img_avatar01.png", alt="")
                            .panel-top-info-time 3 mins ago
                          .panel-btn-menu.btn-qa-menu Menu 
                          include components/menu-qa
                        .panel-body 
                          .panel-main-desc.panel-main-desc-style1 What describes you best? Can you only change your name twice within 14 days?
                            .panel-main-desc-vote.is-activated
                              .panel-main-desc-vote-ico
                                span.ico-arrow-light-up
                              .panel-main-desc-vote-val 154
                          form.form
                            .form-footer 
                              button#btn-status-stage.btn.btn-style5.btn-status-stage.trans(type="button") 
                                span.ico-laptop
                                label Show on stage
                              button.btn.btn-primary.trans(type="button")
                                span.ico-comment
                                |Comment
                    .chat-tool 
                      .chat-tool-main 
                        .chat-tool-icon 
                        input.chat-tool-input(placeholder="What would you like to share?")
                        button.btn.btn-primary.trans.chat-tool-submit(type="button") Send
                #tab-poll.tab-content 
                  include components/tab-poll
                #tab-raised-hands.tab-content
                  include components/tab-raised-hands
                #tab-videos.tab-content 
                  include components/tab-video
          #tab-main2.tab-content 
            include components/tab-main2
  include ../_components/widget
  include components/modal-play
  include components/modal-end
  