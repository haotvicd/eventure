extends ../_layout/default

block vars
  -title        = 'Forgot password'
  -description  = ''
  -keywords     = ''
  -og_title     = ''
  -url          = ''
  -pageID       = 'sign-up forgot-password'
  -jsID         = 'calendar'
  -path         = '../'
  -hasFooter    = true

block scripts

block container
  .m-sign-up
    .side-bg
      .logo
        img(src=path+"/assets/images/signup/logo.png", alt="" width="187" height="48")
      .title
        img(src=path+"/assets/images/signup/title.png", alt="Virtual real Connection" width="344" height="130")
      .image
        img(src=path+"/assets/images/signup/img_side.png", alt="")
    .signup-content.forgot-pass
      .signup-content_inner
        h2.signup_title Forgot password
        form.signup_form
          .m-input
            span.m-input_label Please enter email. We will send you a verify code.
            .input-area
              a.btn-back-clear(href="javascript:;")
                img(src=path+"/assets/images/ico_arrow_backward.svg", alt="")
              input.input.input-text.input-email.js-mail-validate(type="text" placeholder="Your email")
          button.btn.btn-primary.btn-submit.trans(type="submit")
            span Continue
