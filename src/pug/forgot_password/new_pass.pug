extends ../_layout/default

block vars
  -title        = 'Set new password'
  -description  = ''
  -keywords     = ''
  -og_title     = ''
  -url          = ''
  -pageID       = 'sign-up forgot-password'
  -jsID         = 'calendar'
  -path         = '../'
  -hasFooter    = true

block scripts
  script.
    $(document).ready(function(){
      $('.new-pass .input-password').on("keypress keyup blur paste",function () {
        if ($('.pass-field.filled').length == 2) {
          $('.btn-submit').addClass('waiting');
          $('.btn-submit').addClass('is-active');
          $('.btn-submit span').text('Process');
        } else {
          $('.btn-submit').removeClass('waiting');
          $('.btn-submit').removeClass('is-active');
          $('.btn-submit span').text('Submit');
        }
      })
    });

block container
  .m-sign-up
    .side-bg
      .logo
        img(src=path+"/assets/images/signup/logo.png", alt="" width="187" height="48")
      .title
        img(src=path+"/assets/images/signup/title.png", alt="Virtual real Connection" width="344" height="130")
      .image
        img(src=path+"/assets/images/signup/img_side.png", alt="")
    .signup-content.create-account.forgot-pass.forgot-pass--small
      .signup-content_inner
        h2.signup_title Set new password
        .wrap-ct
          form.signup_form.new-pass
            .m-input
              span.m-input_label You should create a strong password that uses uppercase and lowercase letters, numbers, symbols.
              .input-area.pass-field
                a.btn-eye(href="javascript:;")
                  img(src=path+"/assets/images/ico_eye.svg", alt="")
                input.input.input-text.input-password.main-pass(type="password" placeholder="New Password")
              .input-area.pass-field
                a.btn-eye(href="javascript:;")
                  img(src=path+"/assets/images/ico_eye.svg", alt="")
                input.input.input-text.input-password.confirm-pass(type="password" placeholder="Re-type New password")
            button.btn.btn-primary.btn-submit.trans(type="submit")
              img.loading(src=path+"/assets/images/ico_loading.svg", alt="")
              span Submit
